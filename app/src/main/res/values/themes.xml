<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Teampang" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->

        <item name="colorSecondary">@color/primary</item>

        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!-- No Title Bar-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="MainFontR" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/mainr</item>
    </style>
    <style name="MainFontM" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/spoqahansansneomedium</item>
    </style>
    <style name="MainFontB" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/spoqahansansneobold</item>
    </style>
    <style name="CalendarTitle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/mainr</item>
        <item name="android:textColor">@color/greyish_brown</item>
    </style>
    <style name="Sunday" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/mainr</item>
        <item name="android:textColor">@color/coral</item>
        <item name="android:text">@string/sunday</item>
    </style>

    <color name="coral">#fb5046</color>
</resources>