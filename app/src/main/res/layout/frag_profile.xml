<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="44dp"
        android:layout_height="44dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@null"
        app:srcCompat="@drawable/ic_back"/>
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_back"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="17dp"
        android:text="내 프로필"
        android:lineSpacingExtra="7.2sp"
        android:textSize="24sp"
        android:textColor="@color/black"/>
    <LinearLayout
        android:id="@+id/profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="17dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:background="@drawable/circle_grey">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:srcCompat="@drawable/ic_icon_outline_person" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="7dp"
                android:layout_marginTop="9dp"
                android:text="앨리스"
                android:textAppearance="@style/MainFontM"
                android:textSize="19sp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/univ_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="7dp"
                android:layout_marginTop="3dp"
                android:text="한양대학교 물리학과"
                android:textAppearance="@style/MainFontR"
                android:textSize="10sp"
                android:textColor="@color/black"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/univ_box1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:layout_marginHorizontal="17dp"
        app:layout_constraintTop_toBottomOf="@id/profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="대학교"
                android:lineSpacingExtra="5.4sp"
                android:textSize="18sp"
                android:textColor="@color/black"/>
            <EditText
                android:id="@+id/univ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="한양대학교"
                android:maxLength="13"
                android:singleLine = "true"
                android:lines = "1"
                android:enabled="true"
                android:lineSpacingExtra="5.1sp"
                android:textSize="17sp"
                android:textColorHint="@color/black"
                android:backgroundTint="@color/pinkish_grey"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="학번"
                android:lineSpacingExtra="5.4sp"
                android:textSize="18sp"
                android:textColor="@color/black"/>
            <EditText
                android:id="@+id/univ_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="17학번"
                android:maxLength="2"
                android:inputType="number"
                android:singleLine = "true"
                android:lines = "1"
                android:enabled="true"
                android:lineSpacingExtra="5.1sp"
                android:textSize="17sp"
                android:textColorHint="@color/black"
                android:backgroundTint="@color/pinkish_grey"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/univ_box2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/univ_box1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="23dp"
        android:layout_marginHorizontal="17dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="학과"
                android:lineSpacingExtra="5.4sp"
                android:textSize="18sp"
                android:textColor="@color/black"/>
            <EditText
                android:id="@+id/univ_major"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="물리학과"
                android:maxLength="13"
                android:singleLine = "true"
                android:lines = "1"
                android:enabled="true"
                android:lineSpacingExtra="5.1sp"
                android:textSize="17sp"
                android:textColorHint="@color/black"
                android:backgroundTint="@color/pinkish_grey"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="학년"
                android:lineSpacingExtra="5.4sp"
                android:textSize="18sp"
                android:textColor="@color/black"/>
            <EditText
                android:id="@+id/univ_year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="4학년"
                android:maxLength="1"
                android:inputType="number"
                android:singleLine = "true"
                android:lines = "1"
                android:enabled="true"
                android:lineSpacingExtra="5.1sp"
                android:textSize="17sp"
                android:textColorHint="@color/black"
                android:backgroundTint="@color/pinkish_grey"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_edit_profile"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:layout_constraintTop_toBottomOf="@id/univ_box2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="35dp"
        android:layout_marginHorizontal="17dp"
        android:background="@drawable/btn_grey_line"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="프로필 수정"
            android:textSize="13sp"
            android:textColor="@color/greyish_brown"
            android:textAppearance="@style/MainFontM"
            android:lineSpacingExtra="3.9sp"/>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>