<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="44dp"
        android:layout_height="44dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@null"
        app:srcCompat="@drawable/ic_back"/>
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_back"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="17dp"
        android:layout_marginTop="8dp"
        android:text="어느 기간 중에 일정을 잡을까요?"
        android:lineSpacingExtra="7.2sp"
        android:textSize="24sp"
        android:textColor="@color/black"/>
    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintBottom_toTopOf="@id/btn_next"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center">
        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:text="팀원들의 날짜 입력 가능 범위의 시작과 끝을 선택해주세요."
            android:lineSpacingExtra="7.2sp"
            android:textSize="13sp"
            android:textColor="@color/black"/>

        <com.prolificinteractive.materialcalendarview.MaterialCalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:mcv_selectionColor="@color/primary"
            app:mcv_selectionMode="range"
            app:mcv_headerTextAppearance="@style/CalendarTitle"
            app:mcv_dateTextAppearance="@style/MainFontR"
            app:mcv_weekDayTextAppearance="@style/MainFontR"
            app:mcv_weekDayLabels="@array/weekdays_custom"/>
        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="17dp"
            android:text="일정을 선택해주세요"
            android:lineSpacingExtra="7.2sp"
            android:textSize="13sp"
            android:textColor="@color/black"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="17dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/btn_blue"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="다음"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:textAppearance="@style/MainFontR"
            android:lineSpacingExtra="4.8sp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>