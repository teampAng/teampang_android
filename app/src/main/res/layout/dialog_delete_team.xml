<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/white92_box"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:gravity="center"
        android:text="일정 삭제"
        android:textAppearance="@style/MainFontB"
        android:textColor="@color/real_black"
        android:letterSpacing="-0.02"
        android:lineSpacingExtra="5sp"
        android:textSize="17sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="19dp"
        android:gravity="center"
        android:text="팀프앙 SPRINT3을 삭제하시겠습니까?"
        android:textAppearance="@style/MainFontM"
        android:textColor="@color/real_black"
        android:letterSpacing="0.02"
        android:lineSpacingExtra="5sp"
        android:textSize="12sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/warm_grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/btn_pop"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="57dp"
            android:gravity="center"
            android:text="취소"
            android:textAppearance="@style/MainFontR"
            android:textColor="@color/deep_sky_blue"
            android:letterSpacing="0.02"
            android:lineSpacingExtra="5sp"
            android:textSize="17sp" />
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/warm_grey" />
        <TextView
            android:id="@+id/btn_delete"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="57dp"
            android:gravity="center"
            android:text="삭제"
            android:textAppearance="@style/MainFontM"
            android:textColor="@color/orangey_red"
            android:letterSpacing="0.02"
            android:lineSpacingExtra="5sp"
            android:textSize="17sp" />
    </LinearLayout>


</LinearLayout>