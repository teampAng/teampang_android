    <Button
        android:id="@+id/button_main_insert"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:textColor="#5aa6f8"
        android:text="일정 추가하기"
        android:backgroundTint="#ffffff"
        android:drawableLeft="@drawable/ic_plus"
        android:textStyle="normal"
        android:textSize="15sp"
        android:fontFamily="@font/spoqahansansneomedium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/date_text2">
    </Button>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_main_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:scrollbarFadeDuration="0"
        android:scrollbarSize="5dp"
        android:scrollbarThumbVertical="@android:color/darker_gray"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_main_insert" />


</androidx.constraintlayout.widget.ConstraintLayout>