<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="192dp"
        android:background="#5aa6f8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </FrameLayout>

    <LinearLayout
    android:id="@+id/date_linear1"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginLeft="24dp"
    android:layout_marginTop="64dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="쉽고 편하게"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:lineSpacingExtra="6.3sp"
        android:textColor="#ffffff"
        android:textSize="21sp"
        android:fontFamily="@font/spoqahansansneoregular"
        />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="3dp"
        android:layout_marginLeft="163dp"
        app:srcCompat="@drawable/ic_alarm_none"/>

    <ImageView
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginLeft="15dp"
        app:srcCompat="@drawable/ic_profile"
        android:layout_marginTop="4dp"
        />
</LinearLayout>

    <TextView
        android:id="@+id/date_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="일정을 정해보세요!"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/date_linear1"
        android:layout_marginLeft="24dp"
        android:lineSpacingExtra="6.3sp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="21sp"
        android:fontFamily="@font/spoqahansansneobold"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/img_cardview"
        android:layout_width="match_parent"
        android:layout_height="142dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="22dp"
        android:layout_marginRight="16dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date_text1">

        <TextView
            android:id="@+id/date_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/spoqahansansneomedium"
            android:text="가장 임박한 일정"
            android:textColor="#828282"
            android:textSize="12sp"
            android:textStyle="normal" />

        <LinearLayout
            android:id="@+id/toolbar_division"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="38.5dp"
            android:layout_marginRight="10dp"
            android:background="#e0e0e0"
            android:orientation="horizontal" />
        
        <androidx.cardview.widget.CardView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="63dp"
            android:backgroundTint="#f2f1f7"
            app:cardCornerRadius="30dp"
            >

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_void"/>

        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="64dp"
            android:fontFamily="@font/spoqahansansneomedium"
            android:lineSpacingExtra="4.5sp"
            android:text="팀프앙 백엔드 스터디"
            android:textColor="#333333"
            android:textSize="15sp"
            android:textStyle="normal" />

        <ImageView
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="91dp"
            app:srcCompat="@drawable/ic_time"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="98dp"
            android:layout_marginTop="89dp"
            android:fontFamily="@font/spoqahansansneoregular"
            android:textColor="#828282"
            android:textSize="11sp"
            android:textStyle="normal"
            tools:text="11 August 2020" />

        <ImageView
            android:layout_width="7.8dp"
            android:layout_height="13dp"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="107dp"
            app:srcCompat="@drawable/ic_location"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="98dp"
            android:layout_marginTop="106dp"
            android:fontFamily="@font/spoqahansansneoregular"
            android:textColor="#828282"
            android:textSize="11sp"
            android:textStyle="normal"
            tools:text="중앙대학교 팀플실 4" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="276dp"
            android:layout_marginTop="60dp"
            android:backgroundTint="#5aa6f8"
            app:cardCornerRadius="10dp">

            <ImageView
                android:layout_width="43dp"
                android:layout_height="42dp"
                app:srcCompat="@drawable/ic_speaker" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="261dp"
            android:layout_marginTop="109dp"
            android:fontFamily="@font/spoqahansansneoregular"
            android:textColor="#4f4f4f"
            android:textSize="9sp"
            android:textStyle="normal"
            tools:text="전체 팀원 알림 전송" />

    </androidx.cardview.widget.CardView>

    <TextView
            android:id="@+id/date_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="팀플 리스트"
            android:textColor="#4f4f4f"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_cardview"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="29dp"
            android:textSize="17sp"
            android:fontFamily="@font/spoqahansansneomedium"/>

