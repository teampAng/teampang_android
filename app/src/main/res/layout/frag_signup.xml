<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="44dp"
        android:layout_height="44dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@null"
        app:srcCompat="@drawable/ic_back"/>
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="3dp"
        app:layout_constraintTop_toTopOf="@id/btn_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/btn_back"
        android:progress="33"/>
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_back"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="17dp"
        android:layout_marginTop="8dp"
        android:text="회원가입"
        android:lineSpacingExtra="7.2sp"
        android:textSize="24sp"
        android:textColor="@color/black"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="17dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="닉네임"
                android:lineSpacingExtra="5.4sp"
                android:textSize="18sp"
                android:textColor="@color/black"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <EditText
                    android:id="@+id/nickname"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="ex)팀팡"
                    android:singleLine = "true"
                    android:lines = "1"
                    android:enabled="true"
                    android:lineSpacingExtra="5.1sp"
                    android:textSize="17sp"
                    android:textColorHint="@color/pinkish_grey"
                    android:backgroundTint="@color/primary"/>
                <ImageView
                    android:id="@+id/iv_male"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/ic_unchecked_round" />
                <TextView
                    android:id="@+id/tv_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="남"
                    android:layout_marginStart="4dp"
                    android:lineSpacingExtra="5.1sp"
                    android:textSize="17sp"
                    android:textColor="@color/pinkish_grey_two"/>
                <ImageView
                    android:id="@+id/iv_female"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_marginStart="9dp"
                    android:background="@drawable/ic_unchecked_round"/>
                <TextView
                    android:id="@+id/tv_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="여"
                    android:layout_marginStart="4dp"
                    android:lineSpacingExtra="5.1sp"
                    android:textSize="17sp"
                    android:textColor="@color/pinkish_grey_two"/>
            </LinearLayout>
            <TextView
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="영문, 한글, 숫자를 사용하여 2~10자로 입력해주세요."
                android:lineSpacingExtra="3sp"
                android:textSize="10sp"
                android:textColor="@color/orangey_red"/>
            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="이미 사용중인 닉네임입니다."
                android:lineSpacingExtra="3sp"
                android:textSize="10sp"
                android:textColor="@color/orangey_red"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:paddingVertical="7.2dp"
                    android:background="@drawable/btn_grey_line_round"
                    android:text="대학생이에요."
                    android:textSize="11sp"
                    android:textColor="@color/pinkish_grey"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:layout_marginStart="16dp"
                    android:paddingVertical="7.2dp"
                    android:background="@drawable/btn_grey_line_round"
                    android:text="대학생이 아니에요."
                    android:textSize="11sp"
                    android:textColor="@color/pinkish_grey"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="대학교"
                        android:lineSpacingExtra="5.4sp"
                        android:textSize="18sp"
                        android:textColor="@color/black"/>
                    <EditText
                        android:id="@+id/univ"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="학교 입력"
                        android:singleLine = "true"
                        android:lines = "1"
                        android:enabled="true"
                        android:lineSpacingExtra="5.1sp"
                        android:textSize="17sp"
                        android:textColorHint="@color/pinkish_grey"
                        android:backgroundTint="@color/primary"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="학번"
                        android:lineSpacingExtra="5.4sp"
                        android:textSize="18sp"
                        android:textColor="@color/black"/>
                    <EditText
                        android:id="@+id/univ_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="ex)21"
                        android:maxLength="2"
                        android:inputType="number"
                        android:singleLine = "true"
                        android:lines = "1"
                        android:enabled="true"
                        android:lineSpacingExtra="5.1sp"
                        android:textSize="17sp"
                        android:textColorHint="@color/pinkish_grey"
                        android:backgroundTint="@color/primary"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="학과"
                        android:lineSpacingExtra="5.4sp"
                        android:textSize="18sp"
                        android:textColor="@color/black"/>
                    <EditText
                        android:id="@+id/univ_major"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="학과 입력"
                        android:singleLine = "true"
                        android:lines = "1"
                        android:enabled="true"
                        android:lineSpacingExtra="5.1sp"
                        android:textSize="17sp"
                        android:textColorHint="@color/pinkish_grey"
                        android:backgroundTint="@color/primary"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="학년"
                        android:lineSpacingExtra="5.4sp"
                        android:textSize="18sp"
                        android:textColor="@color/black"/>
                    <EditText
                        android:id="@+id/univ_year"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="ex)1"
                        android:maxLength="1"
                        android:inputType="number"
                        android:singleLine = "true"
                        android:lines = "1"
                        android:enabled="true"
                        android:lineSpacingExtra="5.1sp"
                        android:textSize="17sp"
                        android:textColorHint="@color/pinkish_grey"
                        android:backgroundTint="@color/primary"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="17dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/btn_grey"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="완료"
            android:textSize="16sp"
            android:textColor="@color/warm_grey"
            android:textAppearance="@style/MainFontR"
            android:lineSpacingExtra="4.8sp"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>