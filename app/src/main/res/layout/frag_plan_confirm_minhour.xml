<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:background="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back" />


    <TextView
        android:id="@+id/plan_confirm_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:lineSpacingExtra="7.2sp"
        android:text="팀플을 최소 몇 시간 하실 건가요?"
        android:textColor="#333333"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@id/start_guideline2"
        app:layout_constraintTop_toBottomOf="@id/btn_back" />

    <NumberPicker
        android:id="@+id/plan_confirm_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="66.5dp"
        android:theme="@style/AppTheme.NumberPicker"
        android:textStyle="bold"
        android:textSize="17sp"
        android:textColor="#333333"
        android:lineSpacingExtra="5.1sp"
        app:layout_constraintStart_toStartOf="@id/start_guideline"
        app:layout_constraintTop_toBottomOf="@id/plan_confirm_title"
        />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/start_guideline3"
        app:layout_constraintTop_toBottomOf="@id/plan_confirm_title"
        android:layout_marginTop="147dp"
        android:text="시간"
        android:fontFamily="@font/spoqahansansneoregular"
        android:textStyle="normal"
        android:textSize="17sp"
        android:textColor="#000000"
        android:lineSpacingExtra="5.1sp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/plan_confirm_btn"
        android:layout_width="0dp"
        android:layout_height="44dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.915"
        app:layout_constraintStart_toStartOf="@id/start_guideline2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/primary"
        app:cardCornerRadius="7dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="다음"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:lineSpacingExtra="4.8sp"
        android:fontFamily="@font/spoqahansansneoregular"/>
    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/start_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.378" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/start_guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.0427" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/start_guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.643" />

</androidx.constraintlayout.widget.ConstraintLayout>